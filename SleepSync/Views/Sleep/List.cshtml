@model List<SleepSync.Models.Entities.SleepRecord>

<h1 class="mb-4">Your Sleep Reports</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-controller="Sleep" asp-action="Add">Create New Sleep Report</a>
</div>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">Went to Bed At</th>
            <th scope="col">Woke Up At</th>
            <th scope="col">Hours Slept</th>
            <th scope="col">Woke Up Feeling</th>
            <th scope="col">Notes</th>
            <th scope="col">Day</th>
            <th scope="col" style="width: 90px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sleep in Model)
        {
            <tr>
                <td>@sleep.BedTime.ToString("g")</td>
                <td>@sleep.WakeTime.ToString("g")</td>
                <td>@sleep.SleepHours.ToString("0.0")</td>
                <td>@sleep.AutoMood</td>
                <td>@sleep.Notes</td>
                <td>@sleep.Date.ToString("MMM dd, yyyy")</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-controller="Sleep" asp-action="Edit" asp-route-id="@sleep.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
