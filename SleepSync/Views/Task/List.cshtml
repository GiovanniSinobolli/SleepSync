@model List<SleepSync.Models.Entities.UserTask>

<h1 class="mb-4">Your Tasks</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-controller="Task" asp-action="Add">Create New Task</a>
</div>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">Task</th>
            <th scope="col">Description</th>
            <th scope="col">Priority</th>
            <th scope="col">Is Completed?</th>
            <th scope="col">Mood Status</th>
            <th scope="col" style="width: 90px;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Priority</td>
                <td>@(task.IsCompleted ? "Yes" : "No")</td>
                <td>@task.Mood</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-controller="Task" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
