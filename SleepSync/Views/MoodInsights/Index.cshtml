@model IEnumerable<SleepSync.Models.MoodInsight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    <text>
                        <a asp-action="Edit" asp-route-id="@item.MoodInsightId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.MoodInsightId">Delete</a> |
                    </text>
                }
                <a asp-action="Details" asp-route-id="@item.MoodInsightId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
