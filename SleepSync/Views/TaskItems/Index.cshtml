@* @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers *@
@model IEnumerable<SleepSync.Models.TaskItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <text>
                            <a asp-controller="TaskItems" asp-action="Edit" asp-route-id="@item.TaskItemId">Edit</a> |
                            <a asp-controller="TaskItems" asp-action="Delete" asp-route-id="@item.TaskItemId">Delete</a> |
                        </text>
                    }
                    <a asp-controller="TaskItems" asp-action="Details" asp-route-id="@item.TaskItemId">Details</a>
                </td>
        </tr>
}
    </tbody>
</table>
